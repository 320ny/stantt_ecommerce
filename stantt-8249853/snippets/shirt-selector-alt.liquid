<h3 class="headline-border product-page-h3"><img class="product-arrow" ng-show="stanttSize.available" src="https://cdn.shopify.com/s/files/1/0434/4097/files/product-arrow.png?19297">STEP 2: SELECT YOUR COLOR</h3>

<span class="selection-title">Dress:</span>
<div>
  {% for p in collection.products %}
    {% if p.tags contains 'shirt' %}
      {% capture swatch_name %}swatch-{{p.handle}}.jpg{% endcapture %}
      <a href="#/color/{{p.handle}}">
        <img ng-class="{'shirt-product-thumb': '{{p.handle}}' == '{{product.handle}}' }" src="{{ swatch_name | file_url }}">
      </a>
      {% endif %}
  {% endfor %}
</div>

<span class="selection-title">Casual:</span>
<div>
  {% for p in collection.products %}
    {% if p.tags contains 'casual' %}
      {% capture swatch_name %}swatch-{{p.handle}}.jpg{% endcapture %}
      <a href="#/color/{{p.handle}}">
        <img ng-class="{'shirt-product-thumb': '{{p.handle}}' == '{{product.handle}}' }" src="{{ swatch_name | file_url }}">
      </a>
      {% endif %}
  {% endfor %}
</div>

<div class="limited-edition-select">
  <span class="selection-title">Limited Edition:</span>
  {% for p in collection.products %}
    {{ p.inventory_quantity }}
    {% if p.tags contains 'limited-edition' %}
      {% capture swatch_name %}swatch-{{p.handle}}.jpg{% endcapture %}
      <a href="#/color/{{p.handle}}">
        <img ng-class="{'shirt-product-thumb': '{{p.handle}}' == '{{product.handle}}' }" src="{{ swatch_name | file_url }}">
      </a>
    {% endif %}
  {% endfor %}
</div>