<section class="content content-area customer reset-passwor">

  {% include 'breadcrumbs' %}

  <div class="page-title">
    <span class="label">Reset Account Password</span>
  </div>

  <div class="account-form">
    {% form 'reset_customer_password' %}

      <p class="message">Enter a new password for {{ email }}:</p>

      {% if form.errors %}
        <div class="error-message"><span>{{ form.errors | default_errors }}</span></div>
      {% endif %}

      <div class="field-wrap password">
        <label>Password</label>
        <input type="password" name="customer[password]" class="field">
      </div>

      <div class="field-wrap password-confirmation">
        <label>Repeat password</label>
        <input type="password" name="customer[password_confirmation]" class="field">
      </div>

      <input type="submit" class="action-button submit-button" value="Reset">

    {% endform %}
  </div>

</section>