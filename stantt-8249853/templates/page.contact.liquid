<section id="contact-us" class="content content-area">

  <!--
  {% include 'breadcrumbs' %}

  <div class="page-title">
    <span class="label">{{ page.title }}</span>
  </div>
-->
  <div class="fancy-headline-wrapper">
    <h2 class="fancy"><span>CONTACT US</span></h2>
  </div>
  
  <div class="text-content-wrap clearfix">
    
    <!--
    <div class="rte clearfix text-content">
      {{ page.content }}
    </div>
	-->

    <div class="sidebar rte">
      {% form 'contact' %}

        {% if form.errors %}
          <div class="alert-message error"><span>{{ settings.contact-error-message }}</span></div>
        {% endif %}

        {% if form.posted_successfully? %}
          <div class="alert-message success"><span>{{ settings.contact-success-message }}</span></div>
        {% else %}

          <div class="field-wrap author">
            <label>FULL NAME</label>
            <input type="text" value="" name="contact[name]" class="field {% if form.errors contains "author" %}error{% endif %}">
          </div>

          <div class="field-wrap email">
            <label>EMAIL</label>
            <input type="text" value="" name="contact[email]" class="field {% if form.errors contains "email" %}error{% endif %}">
          </div>

          <div class="field-wrap body">
            <label>MESSAGE</label>
            <textarea name="contact[comments]" class="field {% if form.errors contains "body" %}error{% endif %}"></textarea>
          </div>

          <input type="submit" class="action-button submit-button" value="SEND MESSAGE">

        {% endif %}

      {% endform %}

    </div>

  </div>

</section>
<div ng-controller="SizingController"></div>